---
import Base from "../layouts/Base.astro";
---

<Base title="Page Not Found - In The Loop">
	<main class="flex min-h-screen flex-col items-center justify-center bg-black px-4 text-center">
		<h1 class="text-9xl font-bold text-secondary">404</h1>
		<h2 class="mt-4 text-3xl font-light text-white">Page Not Found</h2>
		<p class="mt-4 text-white/60">The page you're looking for doesn't exist or has been moved.</p>
		<a
			href="/"
			class="mt-8 inline-flex items-center gap-2 rounded-full bg-secondary px-8 py-3 font-medium text-white transition-all hover:bg-secondary/90 hover:scale-105"
		>
			<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
			</svg>
			Go Home
		</a>
	</main>
</Base>
