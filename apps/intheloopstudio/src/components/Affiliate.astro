<section id="affiliate" class="relative overflow-hidden bg-gradient-to-r from-purple-900 to-secondary py-24">
	<!-- Background pattern -->
	<div class="absolute inset-0 opacity-10">
		<div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.4\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
	</div>
	
	<div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="grid items-center gap-12 lg:grid-cols-2">
			<div class="hidden lg:block">
				<div class="flex h-80 items-center justify-center">
					<img 
						src="/img/ill2.svg" 
						alt="Affiliate program illustration" 
						class="max-w-sm"
						width="350"
						height="350"
						loading="lazy"
					/>
				</div>
			</div>
			
			<div class="text-center lg:text-left">
				<h2 class="text-4xl font-light text-white sm:text-5xl">Become an Affiliate</h2>
				<p class="mt-6 text-lg leading-relaxed text-white/80">
					The In The Loop Affiliate Program puts qualified creators one step closer toward the dream of making a living from their passions. In The Loop Affiliates can start earning income on their loops while they build their audience.
				</p>
				<a
					class="line-through mt-8 inline-flex items-center gap-2 rounded-full border-2 border-white px-8 py-4 font-medium text-white transition-all hover:bg-white hover:text-secondary"
				>
					<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
					</svg>
					Join Waitlist
				</a>
			</div>
		</div>
	</div>
</section>
