---
const benefits = [
	{
		title: "Build from blocks",
		description:
			"Transform your unfinished loops into lego bricks that yourself and others can use to build from.",
		icon: "blocks",
	},
	{
		title: "Protect your work",
		description:
			"Build your digital portfolio and add licenses to your loops to showcase and protect your work.",
		icon: "shield",
	},
	{
		title: "Track your growth",
		description:
			"Monitor your growth and analyze your loops with advanced analytics and activity feeds.",
		icon: "chart",
	},
];
---

<section id="about" class="bg-gray-50 py-24">
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="grid items-center gap-12 lg:grid-cols-2">
			<div>
				<h2 class="text-4xl font-light text-gray-900 sm:text-5xl">Our Philosophy</h2>
				<p class="mt-2 text-2xl font-light text-gray-700">Dedication to the Creators!</p>
				
				<div class="mt-10 space-y-8">
					{benefits.map((benefit) => (
						<div class="flex gap-5">
							<div class="flex h-14 w-14 flex-shrink-0 items-center justify-center rounded-full bg-secondary/10">
								{benefit.icon === "blocks" && (
									<svg class="h-7 w-7 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
									</svg>
								)}
								{benefit.icon === "shield" && (
									<svg class="h-7 w-7 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
									</svg>
								)}
								{benefit.icon === "chart" && (
									<svg class="h-7 w-7 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
									</svg>
								)}
							</div>
							<p class="text-gray-700 leading-relaxed">{benefit.description}</p>
						</div>
					))}
				</div>
			</div>
			
			<div class="hidden lg:block">
				<div class="relative">
					<div class="absolute -inset-4 rounded-3xl bg-gradient-to-r from-secondary/20 to-purple-500/20 blur-2xl"></div>
					<img 
						src="/img/ill1.svg" 
						alt="Illustration of music collaboration" 
						class="relative max-w-md"
						width="400"
						height="400"
						loading="lazy"
					/>
				</div>
			</div>
		</div>
	</div>
</section>
