---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const projects = [
	{
		category: "Companies",
		items: [
			{
				name: "Udio",
				description: "SOTA music diffusion model and music making tool",
				url: "https://udio.com",
				blogSlug: "i-quit-my-500k-software-job",
			},
			{
				name: "Tapped Ai",
				description: "The leading live music database",
				url: "https://tapped.ai",
			},
			{
				name: "Audius",
				description: "Web3 soundcloud letting musicians own their catalogue",
				url: "https://audius.co",
				blogSlug: "observability-in-audiuss-decentralized-system",
			},
			{
				name: "In The Loop",
				description: "Platform for artists and producers to collaborate",
				url: "https://intheloopstudio.com",
			},
		],
	},
	{
		category: "Projects",
		items: [
			{
				name: "Pennysite",
				description: "Ai Website Builder that costs pennies",
				url: "https://pennysite.app",
				blogSlug: "i-built-a-website-builder-that-costs-pennies",
			},
			{
				name: "Moments.fm",
				description: "Transform memories into personalized melodies",
				url: "https://moments.fm",
			},
			{
				name: "Housefly",
				description: "Interactive playground for learning web scraping",
				url: "https://housefly.cc",
				blogSlug: "introducing-housefly-a-playground-for-web-scraping",
			},
			{
				name: "Saint John",
				description: "Distraction-free Android home screen",
				url: "https://saintjohn.jonaylor.com",
				blogSlug: "introducing-saint-john",
			},
			{
				name: "Language Hub",
				description: "Turn Notion into a language learning center",
				url: "https://language-hub.jonaylor.com",
			},
			{
				name: "sherlock-rs",
				description:
					"Hunt down social media accounts by username across 400+ networks — a Rust CLI OSINT tool.",
				url: "https://github.com/jonaylor89/sherlock-rs",
				blogSlug: "make-an-exe-file",
			},
			{
				name: "pngdb",
				description: "",
				url: "https://github.com/jonaylor89/png-db",
				blogSlug: "select-from-imagepng",
			},
			{
				name: "netbook",
				description:
					"Lightweight TUI request collection manager and runner — a Postman-like HTTP tool for your terminal.",
				url: "https://github.com/jonaylor89/netbook",
			},
			{
				name: "fast-csv-parser",
				description:
					"High-performance CSV parser powered by Rust/N-API — blazing fast and drop-in compatible with csv-parser for big files.",
				url: "https://github.com/jonaylor89/fast-csv-parser",
				blogSlug: "i-made-csv-parser-13x-faster-sometimes",
			},
			{
				name: "pg_guard",
				description:
					"A Postgres proxy that analyzes and blocks dangerous SQL operations to protect your database.",
				url: "https://github.com/jonaylor89/pg_guard",
				blogSlug: "protect-your-database-from-cursor",
			},
			{
				name: "freqmoda",
				description:
					"AI-powered audio editing and processing server/playground — part of your AI DAW experiments.",
