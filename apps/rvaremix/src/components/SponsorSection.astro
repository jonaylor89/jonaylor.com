---
import { Image } from 'astro:assets';
import jamGemsLogo from '../assets/jam_gems_logo.png';
import tappedLogo from '../assets/tapped_reverse.png';
import tccLogo from '../assets/tcc.png';
import iyeLogo from '../assets/iye.jpg';
---

<section class="bg-rva-remix-purple mx-3 my-4 lg:mx-40">
  <div class="flex flex-col items-center py-9">
    <div class="font-bold text-4xl pb-5 lg:font-black lg:text-5xl">
      OUR SPONSORS
    </div>
    <div class="flex md:flex-row">
      <div class="p-4">
        <Image src={tappedLogo} alt="tapped logo" width={200} height={200} loading="lazy" fit="contain" />
      </div>
      <div class="p-4">
        <Image src={jamGemsLogo} alt="jam gems logo" width={200} height={200} loading="lazy" fit="contain" />
      </div>
      <div class="p-4">
        <Image src={tccLogo} alt="TCCEntertainment" width={200} height={200} loading="lazy" fit="contain" />
      </div>
       <div class="p-4">
        <Image src={iyeLogo} alt="in your ear logo" width={200} height={200} loading="lazy" fit="contain" />
      </div>
    </div>
    <div>
      <a class="text-red-300" href="https://drive.google.com/file/d/1HIjUZg0nmd2YB_F9z-Yys1wDUJ_WO3SJ/view?usp=sharing" target="_blank" rel="noopener noreferrer">Learn more</a> about becoming a sponsor!
    </div>
  </div>
</section>
