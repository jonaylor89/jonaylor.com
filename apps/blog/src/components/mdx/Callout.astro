---
interface Props {
	type?: "info" | "warning" | "success" | "error";
}

const { type = "info" } = Astro.props;

const backgroundClass = "bg-gray-100 dark:bg-gray-800 bg-opacity-80 dark:bg-opacity-60";

const borderClassMap = {
	info: "border-l-4 border-blue-400 dark:border-blue-500",
	warning: "border-l-4 border-amber-400 dark:border-amber-500",
	success: "border-l-4 border-emerald-400 dark:border-emerald-500",
	error: "border-l-4 border-red-400 dark:border-red-500",
};

const borderClass = borderClassMap[type];
---

<aside
  class:list={[
    backgroundClass,
    borderClass,
    "px-5 py-4 my-8 rounded-lg backdrop-blur-md shadow-sm transition-all duration-200 hover:shadow-md hover:backdrop-blur-lg"
  ]}
>
  <div class="prose prose-sm dark:prose-invert max-w-none [&>p:first-child]:mt-0 [&>p:last-child]:mb-0">
    <slot />
  </div>
</aside>
