---
interface Props {
	src: string;
	alt: string;
	width?: number;
	height?: number;
	caption?: string;
	class?: string;
}

const { src, alt, width = 800, height = 600, caption, class: className = "" } = Astro.props;
---

<figure class:list={['my-8', className]}>
  <div class="overflow-hidden rounded-md shadow-sm">
    <img
      src={src}
      alt={alt}
      width={width}
      height={height}
      class="w-full h-auto object-cover"
      loading="lazy"
    />
  </div>
  {caption && (
    <figcaption class="mt-2 text-center text-sm text-gray-600 dark:text-gray-400 italic">
      {caption}
    </figcaption>
  )}
</figure>
